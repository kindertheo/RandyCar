{% extends 'base.html.twig' %}

{% block title %}Mail{% endblock %}

{% block body %}
    <h1>Mail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mail.id }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ mail.object }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ mail.content }}</td>
            </tr>
            <tr>
                <th>Sent_date</th>
                <td>{{ mail.sentDate ? mail.sentDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mail_index') }}">back to list</a>

    <a href="{{ path('app_mail_edit', {'id': mail.id}) }}">edit</a>

    {{ include('mail/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Mail index{% endblock %}

{% block body %}
    <h1>Mail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Object</th>
                <th>Content</th>
                <th>Sent_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.object }}</td>
                <td>{{ mail.content }}</td>
                <td>{{ mail.sentDate ? mail.sentDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_mail_show', {'id': mail.id}) }}">show</a>
                    <a href="{{ path('app_mail_edit', {'id': mail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mail_new') }}">Create new</a>
{% endblock %}
